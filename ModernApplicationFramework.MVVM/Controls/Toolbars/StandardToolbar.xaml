<mafc:ToolBar x:Class="ModernApplicationFramework.MVVM.Controls.Toolbars.StandardToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mafc="http://modern.framework.com/controls">

    <mafc:ToolBar.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Icons/Undo_16x.xaml" />
                <ResourceDictionary Source="../../Resources/Icons/Redo_16x.xaml" />
                <ResourceDictionary Source="../../Resources/Icons/NewFile_16x.xaml" />
                <ResourceDictionary Source="../../Resources/Icons/Save_16x.xaml" />
                <ResourceDictionary Source="../../Resources/Icons/OpenFile_16x.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type mafc:Button}">
                <Setter Property="MinWidth" Value="22"/>
            </Style>
        </ResourceDictionary>
    </mafc:ToolBar.Resources>
    <mafc:Button Command="{Binding NewFileCommand}" Content="{StaticResource NewFileIcon}"/>
    <mafc:Button Command="{Binding OpenFileCommand}" Content="{StaticResource OpenFile}"/>
    <mafc:Button Command="{Binding SaveFileCommand}" Content="{StaticResource SaveIcon}"/>

    <Separator />

    <mafc:Button Command="{Binding UndoCommand}" Content="{StaticResource UndoIcon}"/>
    <mafc:Button Command="{Binding RedoCommand}" Content="{StaticResource RedoIcon}"/>
</mafc:ToolBar>
