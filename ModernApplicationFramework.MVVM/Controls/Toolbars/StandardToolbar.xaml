<mafc:ToolBar x:Class="ModernApplicationFramework.MVVM.Controls.Toolbars.StandardToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mafc="http://modern.framework.com/controls">
    
    <mafc:ToolBar.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Icons/Undo_16x.xaml" />
                <ResourceDictionary Source="../../Resources/Icons/Redo_16x.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mafc:ToolBar.Resources>
    
    <mafc:Button Command="{Binding UndoCommand}" Content="{StaticResource UndoIcon}"/>
    <mafc:Button Command="{Binding RedoCommand}" Content="{StaticResource RedoIcon}"/>
    
    
</mafc:ToolBar>
