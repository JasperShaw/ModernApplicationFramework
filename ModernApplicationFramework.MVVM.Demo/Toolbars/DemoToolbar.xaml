<mafc:ToolBar x:Class="ModernApplicationFramework.MVVM.Demo.Toolbars.DemoToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mafc="http://modern.framework.com/controls">

    <mafc:ToolBar.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type mafc:Button}">
                <Setter Property="MinWidth" Value="22"/>
            </Style>
        </ResourceDictionary>
    </mafc:ToolBar.Resources>
    <mafc:Button Command="{Binding NewFileCommand}"/>
    <mafc:Button Command="{Binding OpenFileCommand}"/>
    <mafc:Button Command="{Binding SaveFileCommand}"/>

    <Separator />

    <mafc:Button Command="{Binding UndoCommand}"/>
    <mafc:Button Command="{Binding RedoCommand}"/>
</mafc:ToolBar>
