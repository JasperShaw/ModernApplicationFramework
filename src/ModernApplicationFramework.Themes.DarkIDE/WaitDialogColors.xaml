<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:waitDialog="clr-namespace:ModernApplicationFramework.Threading.WaitDialog;assembly=ModernApplicationFramework.Threading">

    <!--  WaitDialog  -->

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogActiveShadowAndBorder}" Color="#FF007ACC" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogTitleBarBackground}" Color="#2D2D30" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogTitleBarForeground}" Color="#FF999999" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogMessageForeground}" Color="#FFF1F1F1" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogBackground}" Color="#252526" />

</ResourceDictionary>