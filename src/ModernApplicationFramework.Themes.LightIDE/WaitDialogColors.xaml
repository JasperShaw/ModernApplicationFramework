<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:waitDialog="clr-namespace:ModernApplicationFramework.Threading.WaitDialog;assembly=ModernApplicationFramework.Threading">

    <!--  WaitDialog  -->

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogActiveShadowAndBorder}" Color="#FF9B9FB9" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogTitleBarBackground}" Color="#FFEEEEF2" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogTitleBarForeground}" Color="#FF525252" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogMessageForeground}" Color="#FF1E1E1E" />

    <SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type waitDialog:WaitDialogColors}, ResourceId=WaitDialogBackground}" Color="#F4F4F4" />

</ResourceDictionary>