                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter TargetName="Content" Property="TextElement.Foreground" Value="{DynamicResource {x:Static avalonDock:DockingColors.DocumentTabItemTextLastActive}}" />
