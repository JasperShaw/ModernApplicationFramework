<Border x:Class="ModernApplicationFramework.Modules.Output.Controls.OutputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:ClassModifier="internal">
    <Border.Background>
        <SolidColorBrush>
            <SolidColorBrush.Color>
                <Binding Path="BackgroundColor"/>
            </SolidColorBrush.Color>
        </SolidColorBrush>
    </Border.Background>
    <Decorator.Child>
        <ContentPresenter>
            <ContentPresenter.Content>
                <Binding Path="ActivePane"/>
            </ContentPresenter.Content>
        </ContentPresenter>
    </Decorator.Child>
</Border>
