<UserControl x:Class="ModernApplicationFramework.Basics.Settings.Language.LanguageSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:language="clr-namespace:ModernApplicationFramework.Basics.Settings.Language"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="460">

    <StackPanel>
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Left" Target="{Binding ElementName=ComboBox}" Padding="0,5,5,6" 
                   Content="{x:Static language:LanguageSettingsResources.LanguageSettingsCombobox_Label}"/>
            <ComboBox x:Name="ComboBox" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </StackPanel>
</UserControl>
