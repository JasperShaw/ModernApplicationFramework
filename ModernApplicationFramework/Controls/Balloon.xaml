<Window x:Class="ModernApplicationFramework.Controls.Balloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ModernApplicationFramework.Controls"
             xmlns:themes="clr-namespace:ModernApplicationFramework.Core.Themes"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600" Height="90" Width="250" WindowStyle="None"  ResizeMode="NoResize" ShowInTaskbar="False"
        ShowActivated="False" IsTabStop="False"  OverridesDefaultStyle="False" SizeToContent="Height" AllowsTransparency="True" Background="Transparent">
    
    <Window.Resources>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="HelpGradient">
            <LinearGradientBrush.RelativeTransform>
                <RotateTransform Angle="90" CenterX="0.7" CenterY="0.7" />
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFFDFDFD" Offset=".2"/>
            <GradientStop Color="#FFB6FB88" Offset=".8"/>
        </LinearGradientBrush>

        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="InfoGradient">
            <LinearGradientBrush.RelativeTransform>
                <RotateTransform Angle="90" CenterX="0.7" CenterY="0.7" />
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFFDFDFD" Offset=".2"/>
            <GradientStop Color="#FF88CEFB" Offset=".8"/>
        </LinearGradientBrush>

        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="WarningGradient">
            <LinearGradientBrush.RelativeTransform>
                <RotateTransform Angle="90" CenterX="0.7" CenterY="0.7" />
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFFDFDFD" Offset=".2"/>
            <GradientStop Color="#FFF7FB88" Offset=".8"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid RenderTransformOrigin="0,1">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="#fdfdfd"/>
                        <Setter Property="Stretch" Value="Fill"/>
                        <Setter Property="Width" Value="22"/>
                        <Setter Property="Height" Value="31"/>
                        <Setter Property="Panel.ZIndex" Value="99"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#FF757575" Opacity=".7"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <Path Grid.Column="0" HorizontalAlignment="Left" Margin="15,3,0,0" Data="M10305,55.5381L10,0.6 0.7,55" x:Name="PathPointLeft"/>
                <Path Grid.Column="1" HorizontalAlignment="Right" Margin="0,3,15,0" Data="M10300,55 L10284,3 0.7,55" x:Name="PathPointRight"/>
            </Grid>
            <controls:SystemDropShadowChrome Color="Transparent" Margin="5,-3,5,5" SnapsToDevicePixels="True" CornerRadius="5">
                <Border CornerRadius="7" Panel.ZIndex="100" Background="{StaticResource InfoGradient}" x:Name="borderBalloon" VerticalAlignment="Top">
                
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  Width="35"  Margin="5" VerticalAlignment="Top"  Height="35"  x:Name="imageType"/>
                        <Image x:Name="imageClose" ToolTip="Close" VerticalAlignment="Top" Grid.Column="2"  Width="16" Height="16" 
                           Margin="0,5,5,5" Grid.Row="1" Cursor="Hand" MouseDown="ImageCloseMouseDown"/>
                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,5,5,5" >
                            <TextBlock TextOptions.TextFormattingMode="Display" FontWeight="Bold" FontSize="14" x:Name="textBlockTitle" Text="This is the Title"/>
                            <Line Stretch="Fill" Stroke="Black" X2="1" x:Name="lineTitle"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="scrollViewerCaption" >
                                <TextBlock  TextWrapping="Wrap" TextOptions.TextFormattingMode="Display" x:Name="textBlockCaption" Text="This is the caption"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
            </Border>
            </controls:SystemDropShadowChrome>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="#fdfdfd"/>
                        <Setter Property="Stretch" Value="Fill"/>
                        <Setter Property="Width" Value="22"/>
                        <Setter Property="Height" Value="31"/>
                        <Setter Property="Panel.ZIndex" Value="101"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#FF757575" Opacity=".7" Direction="90"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <Path Grid.Column="1" HorizontalAlignment="Right" Margin="0,24,0,3" Data="M10305,55.5381L10,0.6 0.7,55">
                    <Path.RenderTransform>
                        <RotateTransform Angle="180" />
                    </Path.RenderTransform>
                </Path>
                <Path Grid.Column="0" HorizontalAlignment="Left" Margin="40,24,0,3" Data="M10300,55 L10284,3 0.7,55">
                    <Path.RenderTransform>
                        <RotateTransform Angle="180" />
                    </Path.RenderTransform>
                </Path>
            </Grid>
        </StackPanel>
        <Grid.RenderTransform>
            <ScaleTransform ScaleY="1" />
        </Grid.RenderTransform>
